@using SchoolApp.Modul.Post.Provider
@model SchoolApp.Modul.Post.Provider.SchoolDocumentViewModel
@{
    Layout = null;

    var types = (List<TypeViewModel>)ViewBag.type;
}



<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form id="formnews" action="@Url.Action("UpdateDocument", "Document")" method="post" enctype="multipart/form-data">
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="modal-body">
        <div class="kt-portlet__body">
            <div class="kt-section kt-section--first">
                <div class="form-group">
                    <label>Başlık:</label>
                    <input type="text" class="form-control" name="Title" value="@Model.Title">
                </div>
                <div class="form-group">
                    <label>İçerik:</label>
                    <textarea class="form-control" name="Content"> @Model.Content </textarea>
                </div>

                <div class="form-group">
                    <label>Kaetgori:</label>
                    <select name="TypeId" class="form-control">

                        @foreach (var type in types)
                        {
                            if (Model.TypeId == type.Id)
                            {
                                <option value="@type.Id" selected="selected">@type.Title</option>
                            }
                            else
                            {
                                <option value="@type.Id">@type.Title</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Yayın tarihi:</label>
                    <input type="date" class="form-control" name="PublishDate" value="@(Model.PublishDate.ToString("yyyy-MM-dd"))">
                </div>
                <div class="form-group">
                    <label>Bitiş tarihi:</label>
                    <input type="date" class="form-control" name="TerminationDate" value="@(Model.TerminationDate.ToString("yyyy-MM-dd"))">
                </div>
                <div class="form-group">
                    <label>Resim:</label>
                    <input type="file" name="imgFile" class="form-control" />
                </div>
                <div class="form-group">
                    <a href="@(Model.FileUrl.Replace("wwwroot/", ""))">DOSYAI GÖRÜNTÜLE</a>
                </div>

            </div>
        </div>

    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>
