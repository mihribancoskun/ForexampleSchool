@using SchoolApp.Modul.Post.Provider
@model SchoolApp.Modul.Post.Provider.SchoolPostViewModel
@{
    Layout = null;
    ViewData["Title"] = "AddPost";
    var types = (List<TypeViewModel>)ViewBag.type;

}



<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form id="formnews" action="@Url.Action("UpdatePost", "News")" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="kt-portlet__body">
            <div class="kt-section kt-section--first">
                <div class="form-group">
                    <label>Başlık:</label>
                    <input type="text" class="form-control" name="Title">
                </div>
                <div class="form-group">
                    <label>İçerik:</label>
                    <textarea class="form-control" name="Content"> @Model.Content </textarea>
                </div>

                <div class="form-group">
                    <label>Kaetgori:</label>
                    <select name="TypeId" class="form-control">
                        <option value=""></option>
                        @foreach (var type in types)
                        {
                            <option value="@type.Id">@type.Title</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Yayın tarihi:</label>
                    <input type="date" class="form-control" name="PublishDate">
                </div>
                <div class="form-group">
                    <label>Bitiş tarihi:</label>
                    <input type="date" class="form-control" name="TerminationDate">
                </div>
                <div class="form-group">
                    <label>Resim:</label>
                    <input type="file" name="imgFile" class="form-control" />
                </div>



            </div>
        </div>



    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>
